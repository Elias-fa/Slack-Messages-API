<div class="row">
  <div class="col-md-9 col-md-offset-2">
    <div class="teams-directory-container">
      <div class="teams-list">
        <center>
          <h1 class="page-header">Teams</h1>
        </center>
        <% @teams.each do |team| %>
          <div class="team">
            <h2> <%= team.name %></h2>
            <p> <%= team.description %></p>
            <%= link_to "Add Me", add_team_path(team.id), class: "btn btn-primary", method: :post %>
          </div><hr>
        <% end %>
      </div>
    </div>
  </div>
</div>
